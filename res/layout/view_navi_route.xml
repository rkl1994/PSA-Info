<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:background="@drawable/purple_radius" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_middle_icon" />
    </RelativeLayout>

    <ListView
        android:id="@+id/naviroute_content"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relativeLayout2" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="230dp"
        android:layout_height="200dip" 
        
        android:layout_below="@+id/naviroute_content">
        <Button 
            android:id="@+id/short_route_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/navi_route_btn_bg"/>
        <TextView 
            android:id="@+id/navi_short_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最短路线"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:textSize="30sp"/>
       <Button 
            android:id="@+id/avoid_route_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/navi_route_btn_bg"/>
      

       <Button
           android:id="@+id/fast_route_btn"
           android:layout_width="200dp"
           android:layout_height="200dp"
           
           android:layout_centerHorizontal="true"
           android:background="@drawable/navi_route_btn_bg" />
       
        <TextView 
            android:id="@+id/navi_fast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最快路线"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:textSize="30sp"/>
        
        <TextView 
            android:id="@+id/navi_avoid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="避免收费站"
            android:layout_marginLeft="560dp"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:textSize="30sp"/>

    </RelativeLayout>

</RelativeLayout>