<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/contactprofile_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        
        android:src="@drawable/phone_contact_right" />

    <TextView
        android:id="@+id/contactprofile_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contactprofile_item_img"
        android:layout_alignRight="@+id/contactprofile_item_img"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="100dp"
        android:text="name"
        android:textColor="#AFDEFF"
        android:textSize="20sp" />

</RelativeLayout>